{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
        "name":"guestbook",
        "labels":{
            "k8s-app.guestbook":"web"
        }
    },
    "spec":{
        "replicas":1,
        "selector":{
            "k8s-app.guestbook":"web"
        },
        "template":{
            "metadata":{
                "labels":{
                    "k8s-app.guestbook":"web"
                }
            },
            "spec":{
                "nodeSelector":{
                    "kubernetes.io/hostname": "worker2"
                },
                "containers":[{
                    "name":"guestbook",
                    "image":"kubernetes/guestbook:v2",
                    "ports":[{
                        "name":"http-server",
                        "containerPort":3000
                    }]
                }]
            }
        }
    }
}
